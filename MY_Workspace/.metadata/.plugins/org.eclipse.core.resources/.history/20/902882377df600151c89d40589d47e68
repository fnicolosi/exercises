public class NewChess {

	public static void main(String[] args) {
		String[][] chessArray = new String[8][8];
		for (int i = 0; i < 8; i++) {
			
			String linea = "";
			for (int j = 0; j < 8; j++) {

				if (i  == j ) {
					chessArray[i][j] = "|1|";
				} else {
					chessArray[i][j] = "|0|";
				}
				linea +=chessArray[i][j];

			}
			System.out.println(linea);

		}
	}
}