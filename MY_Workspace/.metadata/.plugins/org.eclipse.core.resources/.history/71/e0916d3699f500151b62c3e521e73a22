public class Test {
	private static int ContaPari(int i){
		if (i % 2 == 0) {
			System.out.println("pari");
				}
		 else {
			System.out.println(i); }
		return i;
	}
	public static void main(String[] Args) {
		int a =0;
		while (a < 20) {
			a++;
			// corpo del while
				}
		a = ContaPari(a);
	}
}
