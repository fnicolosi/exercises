public class NewChess {

	public static void main(String[] args) {
		String[][] chessArray = buildChessArray();
		
		cleanChessLine(chessArray);
		
		
		
	}

	private static String cleanChessLine(String[][] chessArray, int x) {
		if(chessArray != null ) return "|1|" ;
		else{
		;
		return "|0|";
		}
		
	}

	private static String[][] buildChessArray() {
		String[][] chessArray = new String[8][8];
		for (int i = 0; i < 8; i++) {

			String linea = "";
			for (int j = 0; j < 8; j++) {

				if ((i + j) % 2 == 0) {
					chessArray[i][j] = "|1|";
				} else {
					chessArray[i][j] = "|0|";
				}
				linea += chessArray[i][j];

			}
			System.out.println(linea);

		
		}
		return chessArray;
	}
}